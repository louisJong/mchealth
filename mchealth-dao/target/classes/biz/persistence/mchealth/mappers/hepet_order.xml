<update id="addKdInfo" parameterType="hashmap">
    update hepet_order 
	<set>
	<if test="kdNo != null">kd_no=#{kdNo},</if>
	<if test="kdName != null">kd_name=#{kdName},</if>
	status = 'NORECEIVE'
	, update_time=now(),
	add_kd_time=now()
	</set> 
	where id=#{id}
</update>
